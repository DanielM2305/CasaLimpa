<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">



    <!--Atenção: MeusServicosActivity, Servicos.java, ServicosAdapter.java e activity_meus_servicos.xml
                  Funcionam em conjunto qualquer alteração pode gerar erros pois elas juntas são o ListView de Serviços-->

        <ImageView
            android:id="@+id/fotoServicoId"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_camera"/>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TableRow>

                <TextView
                    android:layout_width="143dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="Categoria"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/categoriaId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:layout_margin="3dp"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prazo médio sugerido"
                    android:textStyle="bold"
                    android:layout_margin="3dp"
                    />
                <TextView
                    android:id="@+id/prazoMedioSugeridoId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:layout_margin="3dp"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preço sugerido"
                    android:textStyle="bold"
                    android:layout_margin="3dp"
                    />
                <TextView
                    android:id="@+id/precoSugeridoId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:layout_margin="3dp"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prestador de Serviço"
                    android:textStyle="bold"
                    android:layout_margin="3dp"
                    />
                <TextView
                    android:id="@+id/prestadorServicoId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:layout_margin="3dp"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registro Salarial Informado"
                    android:textStyle="bold"
                    android:layout_margin="3dp"
                    />
                <TextView
                    android:id="@+id/registroSalarialId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:layout_margin="3dp"
                    />
            </TableRow>
            <TableRow>

            </TableRow>
        </TableLayout>

    </HorizontalScrollView>





</LinearLayout>
