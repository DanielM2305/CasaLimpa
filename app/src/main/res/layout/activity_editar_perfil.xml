<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="casalimpa.projeto.com.casalimpa.EditarPerfilActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="10dp">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <!--- android:id="@+id/NomedeId"  todos os EditText devem conter um id que será usado na programação-->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome completo"
                    android:inputType="textPersonName"
                    android:textColor="@color/corLetrasGeral" />

                <!--- android:id="@+id/NomedeId"  todos os EditText devem conter um id que será usado na programação-->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="E-mail"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/corLetrasGeral" />


                <!--- android:id="@+id/NomedeId"  todos os EditText devem conter um id que será usado na programação-->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome de usuário"
                    android:inputType="text"
                    android:textColor="@color/corLetrasGeral" />

                <!--- android:id="@+id/NomedeId"  todos os EditText devem conter um id que será usado na programação-->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Senha"
                    android:inputType="textPassword"
                    android:textColor="@color/corLetrasGeral" />

                <!--- android:id="@+id/NomedeId"  todos os EditText devem conter um id que será usado na programação-->
                <EditText
                    android:id="@+id/cpfEditTextId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CPF"
                    android:inputType="number"
                    android:textColor="@color/corLetrasGeral" />

                <!--- android:id="@+id/NomedeId"  todos os EditText devem conter um id que será usado na programação-->
                <EditText
                    android:id="@+id/telEditTextId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Telefone"
                    android:inputType="phone"
                    android:textColor="@color/corLetrasGeral" />


                <!--- android:id="@+id/NomedeId"  todos os EditText devem conter um id que será usado na programação-->
                <EditText
                    android:id="@+id/dataEditTextId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Data de nascimento"
                    android:inputType="date"
                    android:textColor="@color/corLetrasGeral" />


                <!--- android:id="@+id/NomedeId"  todos os EditText devem conter um id que será usado na programação-->
                <EditText
                    android:id="@+id/cepEditTextId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CEP"
                    android:inputType="number"
                    android:textColor="@color/corLetrasGeral" />


                <!--- android:id="@+id/NomedeId"  todos os EditText devem conter um id que será usado na programação-->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Logradouro"
                    android:inputType="text"
                    android:textColor="@color/corLetrasGeral" />


                <!--- android:id="@+id/NomedeId"  todos os EditText devem conter um id que será usado na programação-->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cidade"
                    android:inputType="text"
                    android:textColor="@color/corLetrasGeral" />


                <!--- android:id="@+id/NomedeId"  todos os EditText devem conter um id que será usado na programação-->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Bairro"
                    android:inputType="text"
                    android:textColor="@color/corLetrasGeral" />


                <!--- android:id="@+id/NomedeId"  todos os EditText devem conter um id que será usado na programação-->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Estado"
                    android:inputType="text"
                    android:textColor="@color/corLetrasGeral" />

                <!--- android:id="@+id/NomedeId"  todos os EditText devem conter um id que será usado na programação-->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Complemento"
                    android:inputType="text"
                    android:textColor="@color/corLetrasGeral" />

                <!--- android:id="@+id/NomedeId"  todos os Button devem conter um id que será usado na programação-->

                <!-- Botão apenas para teste de navegação entre paginas -->
                <Button
                    android:id="@+id/botaoCadastrar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Salvar Edição"
                    android:textColor="@color/corLetrasGeral"
                    android:textSize="@dimen/tamanhoTextoBotoes"
                    android:onClick="salvarEdicao"/>

            </LinearLayout>

        </ScrollView>



    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>
