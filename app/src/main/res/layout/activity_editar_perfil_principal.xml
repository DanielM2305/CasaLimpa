<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarPerfilPrincipalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="10dp"
        tools:ignore="MissingConstraints">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <!--- android:id="@+id/NomedeId"  todos os EditText devem conter um id que será usado na programação-->
                <EditText
                    android:id="@+id/loginPerfilPrincipal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Login"
                    android:inputType="textPersonName"
                    android:textColor="@color/corLetrasGeral" />

                <!--- android:id="@+id/NomedeId"  todos os EditText devem conter um id que será usado na programação-->
                <EditText
                    android:id="@+id/emailPerfilPrincipal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="E-mail"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/corLetrasGeral" />

                <!--- android:id="@+id/NomedeId"  todos os EditText devem conter um id que será usado na programação-->
                <EditText
                    android:id="@+id/cpfPerfilPrincipal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CPF"
                    android:inputType="number"
                    android:textColor="@color/corLetrasGeral" />



                <!--- android:id="@+id/NomedeId"  todos os EditText devem conter um id que será usado na programação-->
                <EditText
                    android:id="@+id/cepEditTextId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CEP"
                    android:inputType="number"
                    android:textColor="@color/corLetrasGeral" />


                <!--- android:id="@+id/NomedeId"  todos os EditText devem conter um id que será usado na programação-->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Logradouro"
                    android:enabled="false"
                    android:inputType="text"
                    android:textColor="@color/corLetrasGeral" />


                <!--- android:id="@+id/NomedeId"  todos os EditText devem conter um id que será usado na programação-->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cidade"
                    android:enabled="false"
                    android:inputType="text"
                    android:textColor="@color/corLetrasGeral" />


                <!--- android:id="@+id/NomedeId"  todos os EditText devem conter um id que será usado na programação-->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Bairro"
                    android:enabled="false"
                    android:inputType="text"
                    android:textColor="@color/corLetrasGeral" />


                <!--- android:id="@+id/NomedeId"  todos os EditText devem conter um id que será usado na programação-->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Estado"
                    android:enabled="false"
                    android:inputType="text"
                    android:textColor="@color/corLetrasGeral" />

                <!--- android:id="@+id/NomedeId"  todos os EditText devem conter um id que será usado na programação-->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Complemento"
                    android:inputType="text"
                    android:textColor="@color/corLetrasGeral" />


                <Button
                    android:id="@+id/botaoAcessarGaleriaPerfilPrincipalId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/corLetrasGeral"
                    android:textSize="@dimen/tamanhoTextoGeral"
                    android:text="Selecionar Foto"/>

                <ImageView
                    android:id="@+id/imagemNovoServicoIdPerfilPrincipal"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_camera"
                    />

                <!--- android:id="@+id/NomedeId"  todos os Button devem conter um id que será usado na programação-->

                <!-- Botão apenas para teste de navegação entre paginas -->
                <Button
                    android:id="@+id/botaoCadastrarPerfilPrincipal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Salvar Edição"
                    android:textColor="@color/corLetrasGeral"
                    android:textSize="@dimen/tamanhoTextoBotoes"
                    android:onClick="salvarEdicaoPerfilPrincipal"/>
                <Button
                    android:id="@+id/botaoCancelarPerfilPrincipal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancelar"
                    android:textColor="@color/corLetrasGeral"
                    android:textSize="@dimen/tamanhoTextoBotoes"
                    android:onClick="cancelarEdicaoPerfilPrincipal"/>

            </LinearLayout>

        </ScrollView>



    </LinearLayout>


</android.support.constraint.ConstraintLayout>